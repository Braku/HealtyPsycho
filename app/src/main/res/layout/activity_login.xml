<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_degradado"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@drawable/logo" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3">

        <androidx.cardview.widget.CardView
            android:layout_width="180dp"
            android:layout_height="703dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="8"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="120dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="40dp"
            android:id="@+id/txtSignUp"/>

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_marginTop="150dp"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textColor="@color/blue2"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:layout_marginTop="250dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter username"
        android:background="@drawable/text_border"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="280dp"
        android:id="@+id/eTxtUserName"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:layout_marginTop="340dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="example@example.com"
        android:background="@drawable/text_border"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="370dp"
        android:id="@+id/eTxtMail"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="430dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="35dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter password"
        android:background="@drawable/text_border"
        android:paddingHorizontal="20dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="460dp"
        android:id="@+id/eTxtPassW"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="560dp"
        android:backgroundTint="@color/blue3"
        android:layout_centerHorizontal="true"
        android:text="Ingresar"
        android:id="@+id/btnLogin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Olvidaste tu contraseÃ±a?"
        android:layout_marginTop="505dp"
        android:gravity="end"
        android:textSize="15dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="@color/blue3"
        android:id="@+id/forgotP"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aun no tienes una cuenta? Registrate aqui"
        android:layout_marginTop="605dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/blue3"/>

</RelativeLayout>